    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/watcher",
            "args": [
                "--config",
                "${workspaceFolder}/cmd/watcher/config.yaml"
            ]
        },
        {
            "name": "Launch Controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/watcher-ctl",
            "args": [
                "--msg",
                "Watch",
                "--config",
                "${workspaceFolder}/cmd/watcher/config.yaml"
            ]
        }
    ]
}